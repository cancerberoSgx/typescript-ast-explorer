{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2018",
    "module": "commonjs",
    "lib": [
      "esnext"
    ],
    "moduleResolution": "node",
    "rootDir": ".",
    "declaration": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "blessed-contrib": ["node_modules/accursed/dist/src/declarations/blessed-contrib"],      
    //   "blessed": ["node_modules/accursed/dist/src/declarations/blessed"]
    },
    "jsx": "React",
    "skipLibCheck": true
  },
  "include": [
    "src", "spec"
  ],
  "exclude": [
    "node_modules"
  ]
}
